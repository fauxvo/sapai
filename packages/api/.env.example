# SAP S/4HANA Connection Configuration
# Copy this file to .env and fill in your values

# Required — SAP System Connection
SAP_BASE_URL=https://<sap-host>:<port>
SAP_CLIENT=100
SAP_USERNAME=<technical_user>
SAP_PASSWORD=<password>

# Optional — Defaults shown
SAP_LANGUAGE=EN
SAP_TIMEOUT_MS=30000
SAP_MAX_RETRIES=3
# Set to true when using self-signed certificates (e.g. SAP CAL dev instances)
SAP_TRUST_ALL_CERTS=false

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# API Server
PORT=3000

# Database — path to the SQLite file. Defaults to ./data/sapai.db
DB_PATH=./data/sapai.db

# AI Agent (Claude API)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-5-20250514
AGENT_CONFIDENCE_THRESHOLD=0.6

# Clerk Authentication (optional — auth disabled when not set)
# Sign up at https://clerk.com to get these values
CLERK_SECRET_KEY=
CLERK_PUBLISHABLE_KEY=
CLERK_JWT_KEY=

# Rate Limiting (defaults shown)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=10
