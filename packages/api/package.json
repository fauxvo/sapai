{
  "name": "@sapai/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "typecheck": "tsc --noEmit",
    "generate": "generate-odata-client --input service-specs --outputDir src/generated --optionsPerService options-per-service.json --overwrite --skipValidation",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --max-warnings 0",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@clerk/backend": "^2.32.1",
    "@hono/zod-openapi": "^1.2.2",
    "@sap-cloud-sdk/connectivity": "^4.4.0",
    "@sap-cloud-sdk/http-client": "^4.4.0",
    "@sap-cloud-sdk/odata-v2": "^4.4.0",
    "@sap-cloud-sdk/util": "^4.4.0",
    "@sapai/shared": "workspace:*",
    "@scalar/hono-api-reference": "^0.5",
    "bignumber.js": "^9.3.1",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4",
    "hono-rate-limiter": "^0.5.3",
    "moment": "^2.30.1",
    "stoker": "^2.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@sap-cloud-sdk/generator": "^4.4.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.9",
    "@types/node": "^22",
    "better-sqlite3": "^12.6.2",
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.7",
    "vitest": "^4.0.18"
  }
}
